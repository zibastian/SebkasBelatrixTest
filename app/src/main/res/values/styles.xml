<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="Compass">

        <attr name="degree_color" format="color" />
        <attr name="show_orientation_labels" format="boolean"/>
        <attr name="orientation_labels_color" format="color"/>
        <attr name="show_degree_value" format="boolean" />
        <attr name="degree_value_color" format="color" />
        <attr name="needle" format="integer"/>
        <attr name="degrees_step" format="integer"/>
        <attr name="show_border" format="boolean"/>
        <attr name="border_color" format="color"/>

    </declare-styleable>

</resources>
