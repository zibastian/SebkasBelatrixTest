<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CompassActivity">

    <com.example.belatrixtest.utils.CompassView
        android:id="@+id/compass_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:border_color="@android:color/holo_red_dark"
        app:degree_color="@android:color/holo_blue_light"
        app:degree_value_color="@color/colorAccent"
        app:degrees_step="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:needle="@drawable/ic_needle"
        app:orientation_labels_color="@android:color/holo_red_dark"
        app:show_border="false"
        app:show_degree_value="false"
        app:show_orientation_labels="true" />

</androidx.constraintlayout.widget.ConstraintLayout>